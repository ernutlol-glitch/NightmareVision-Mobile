<menubar id="_menuBar" width="100%" height="40" horizontalAlign='right'>


    <spacer width="33%"/>

    <menu text="Options" id="optionsMenu">        
        <menu-item id="openHelpWindow" text="Open Help Window"/>
        <checkbox text="Show sprite bounds?" id="showBounds"/>
        <menu-separator />
        <menu-item id="exitMenuButton" text="Exit"/>
    </menu>

    <spacer width="20%"/>

    <menu text="BG View" id="bgView" style="padding:10px;">
        <vbox width="100%" horizontalAlign="center" verticalAlign="center">

            <checkbox text="Stylized BG" id="coolBGCheckbox" verticalAlign="center"/>

            <checkbox text="Grid Bg" id="gridBGCheckbox" verticalAlign="center"/>

            <hbox tooltip="if Stylized Bg is disabled, change the colour of the bg.">
                <label text="Bg Colour" verticalAlign="center" />
                <color-picker-popup id="bgColour" verticalAlign="center"/>
            </hbox>
        </vbox>
    </menu>

    <spacer width="20%"/>

    <menu text="Ghost Settings" id="ghostSettings" style="padding:10px;">
        <vbox width="100%" horizontalAlign="center" verticalAlign="center">

            <hbox verticalAlign="center" horizontalAlign="center">

                <button allowFocus="false" id="enableGhost" text="Spawn Ghost" verticalAlign="center" tooltip="Spanws a copy of the character"/>

                <vbox>
                    <checkbox text="Highlight it?" id="ghostBlend" tooltip="Sets the copy's colours to be lighter"/>
                    <checkbox text="In Front?" id="ghostInFront" tooltip="Makes the ghost in front of the character"/>
                </vbox>

            </hbox>

            <spacer height="1"/>
            <rule />
            <spacer height="1"/>

            <label text="Ghost Alpha" verticalAlign="center" horizontalAlign="center"/>
            <slider pos="0.5" id="ghostAlphaSlider" min="0" max="1" verticalAlign="center" horizontalAlign="center" tooltip="Changes the character copy's transparency" />

        </vbox>
    </menu>

    
    <label text="Skin Name:" verticalAlign="center" />
    <textfield placeholder="default" width="150" verticalAlign="center" id="skinName"/>    
    
    <spacer width="30"/>
    <rule direction="vertical" width="20" height="30"/>
    <spacer width="30"/>
    
    <button allowFocus="false" id="refreshButton" text="Refresh Skin" style="background-color: #575213;" verticalAlign="center"/>
    <button allowFocus="false" id="saveButton" text="Save Skin" style="background-color: #156015;" verticalAlign="center"/>
    
    <dropdown width="150" dropdownHeight="200" searchable="true" searchPrompt="default" id="skinDropdown" verticalAlign="center" tooltip="List of currently found characters."/>
</menubar>